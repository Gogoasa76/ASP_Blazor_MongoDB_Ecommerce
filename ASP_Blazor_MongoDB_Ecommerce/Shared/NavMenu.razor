@inject NavigationManager navManager
<MudNavMenu Style="@($"background:{Colors.Teal.Darken2};")">
    <MudButtonGroup Class="mx-16">
        <MudMenu  Color="Color.Error" StartIcon="@Icons.Material.Filled.FormatListBulleted" IconColor="Color.Info" Class="px-6" Variant="Variant.Text">
            <ActivatorContent>
                <MudButton StartIcon="@Icons.Material.Filled.FormatListBulleted" IconColor="Color.Info" Class="px-6" Variant="Variant.Text" Style="@($"color:{Colors.Shades.White};")">Products</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(telefon)">
                    <MudText >Telefoane</MudText>
                </MudMenuItem>
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(tableta)">
                    <MudText>Tablete</MudText>
                </MudMenuItem>            
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(Laptop)">
                    <MudText >Laptop</MudText>
                </MudMenuItem>
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(accesori)">
                    <MudText>Accessori</MudText>
                </MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudButton Class="px-10" Style="@($"color:{Colors.Shades.White};")" Href="/info">About Us</MudButton>
        <MudButton Class="px-10" Style="@($"color:{Colors.Shades.White};")" Href="/contact">Contacts</MudButton>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <MudButton Class="px-16" Style="@($"color:{Colors.Shades.White};")" Href="checkOut">CheckOut</MudButton>
                <MudMenu Class="px-6">
                    <ActivatorContent>
                        <MudButton StartIcon="@Icons.Material.Filled.FormatListBulleted" IconColor="Color.Info" Class="px-6" Variant="Variant.Text" Style="@($"color:{Colors.Shades.White};")">Administrator</MudButton>
                    </ActivatorContent>
                    <ChildContent>
                        <MudNavLink Style="@($"color:{Colors.Shades.Black};")" Href="addProduct">Add_Product</MudNavLink>
                        <MudNavLink Style="@($"color:{Colors.Shades.Black};")" Href="updateProduct">Update_Product</MudNavLink>
                        <MudNavLink Style="@($"color:{Colors.Shades.Black};")" Href="updateUser">Update_User</MudNavLink>
                    </ChildContent>
                </MudMenu>
            </Authorized>
        </AuthorizeView>
    </MudButtonGroup>
</MudNavMenu>
@code {
    public string telefon = "telefon";
    public string tableta = "tableta";
    public string Laptop = "laptop";
    public string accesori = "accesori";


    public void Search(string tag)
    {
        navManager.NavigateTo($"/itemByTag/{tag}", true);
    }
}
