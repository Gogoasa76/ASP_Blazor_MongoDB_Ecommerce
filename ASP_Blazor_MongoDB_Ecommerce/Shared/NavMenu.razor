@inject NavigationManager navManager
<MudNavMenu Class="mx-auto" Style="@($"background:{Colors.Teal.Darken2};")">
    <MudButtonGroup Class="mx-16">
        <MudMenu  Color="Color.Error" StartIcon="@Icons.Material.Filled.FormatListBulleted" IconColor="Color.Info" Class="px-6" Variant="Variant.Text">
            <ActivatorContent>
                <MudButton StartIcon="@Icons.Material.Filled.FormatListBulleted" IconColor="Color.Info" Class="px-6" Variant="Variant.Text" Style="@($"color:{Colors.Shades.White};")">Products</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(samsung)">
                    <MudText >Samsung</MudText>
                </MudMenuItem>
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(apple)">
                    <MudText>Apple</MudText>
                </MudMenuItem>            
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(xiaomi)">
                    <MudText >Xiaomi</MudText>
                </MudMenuItem>
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(nokia)">
                    <MudText>Nokia</MudText>
                </MudMenuItem>
                <MudMenuItem Class="" Style="width: 150px" @onclick="()=>Search(sony)">
                    <MudText>Sony</MudText>
                </MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudButton Class="px-10" Style="@($"color:{Colors.Shades.White};")" Href="/info">Informations</MudButton>
        <MudButton Class="px-10" Style="@($"color:{Colors.Shades.White};")" Href="/contact">Contacts</MudButton>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <MudButton Class="px-16" Style="@($"color:{Colors.Shades.White};")" Href="checkOut">CheckOut</MudButton>
                <MudMenu Class="px-6">
                    <ActivatorContent>
                        <MudButton StartIcon="@Icons.Material.Filled.FormatListBulleted" IconColor="Color.Info" Class="px-6" Variant="Variant.Text" Style="@($"color:{Colors.Shades.White};")">Administrator</MudButton>
                    </ActivatorContent>
                    <ChildContent>
                        <MudNavLink Style="@($"color:{Colors.Shades.Black};")" Href="addProduct">Add_Product</MudNavLink>
                        <MudNavLink Style="@($"color:{Colors.Shades.Black};")" Href="updateProduct">Update_Product</MudNavLink>
                        <MudNavLink Style="@($"color:{Colors.Shades.Black};")" Href="updateUser">Update_User</MudNavLink>
                    </ChildContent>
                </MudMenu>
            </Authorized>
        </AuthorizeView>
    </MudButtonGroup>
</MudNavMenu>
@code {
    public string samsung = "samsung";
    public string apple = "apple";
    public string xiaomi = "xiaomi";
    public string nokia = "nokia";
    public string sony = "sony";


    public void Search(string tag)
    {
        navManager.NavigateTo($"/itemByTag/{tag}", true);
    }
}
